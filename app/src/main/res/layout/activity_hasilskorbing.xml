<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.user.ya.hasilskorbing">

    <TextView
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nilai"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="Hasil Jawaban"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nilai"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#b5fffe"
        android:gravity="center"
        android:padding="10dp"
        android:text="SKOR : 100"
        android:textColor="#000"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnpembahasan"
        android:layout_marginTop="55dp"
        android:onClick="ulangi"
        android:background="#f58686"
        android:text="Ulangi Kuis"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnpembahasan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nilai"
        android:layout_marginTop="20dp"
        android:background="#f58686"
        android:onClick="pembing"
        android:text="pembahasan"
        android:textSize="20sp" />

    <Button
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5"
        android:layout_marginTop="5dp"
        android:background="#f58686"
        android:onClick="menuawal"
        android:text="HOME"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hasil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        app:srcCompat="@drawable/cong" />


</RelativeLayout>